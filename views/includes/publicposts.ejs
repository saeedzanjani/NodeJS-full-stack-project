<% if(posts.length > 0) { %> <% for(let post of posts) { %>
    <div class="card mt-4 mb-4">
        <img
            class="card-img-top"
            src="http://localhost:3000/uploads/thumbnails/<%= post.thumbnail %>"
            alt="Card image cap"
        />
        <div class="card-body">
            <h2 class="card-title"><%= post.title %></h2>
            <p class="card-text text-justify"><%- truncate(post.text, 400) %></p>
            <a href="/post/<%= post._id %>" class="btn btn-primary">more ...</a>
        </div>
        <div class="card-footer text-muted">
            Posted time : <%= (post.createdAt.toUTCString()) %>
        </div>
    </div>
    <% } %> <% } else {%>
    <div class="m-5 text-center">
        <h1>Not Found Any Post</h1>
    </div>
    <% } %>